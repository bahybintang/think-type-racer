<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Think Type Racer</title>
  {{ style('style') }}
</head>

<body>
  <section>
    <div class="logo"></div>
    <div class="title"></div>
    <div class="subtitle">
      <p>Please pick a username.</p>
      <form method="POST" action="{{ route('pickusername.register') }}">
        {{ csrfField() }}
        {{ elIf('<span class="span-validation-error">$self</span><br/>', getErrorFor('username'), hasErrorFor('username')) }}
        <input type="text" name="username" id="">
        <input type="submit" value="Submit">
      </form>
    </div>
  </section>
</body>

</html>
